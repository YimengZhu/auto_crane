<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="AutoCrane">

    <xacro:include filename="$(find auto_crane)/urdf/crane.gazebo.xacro"/>
    <!-- params definition -->

    <!-- macro definition -->
    <xacro:macro name="default_origin">
        <origin xyz="0 0 0" rpy="0 0 0" />
    </xacro:macro>

    <xacro:macro name="box_geometry" params="length width height">
        <geometry>
            <box size="${length} ${width} ${height}" />
        </geometry>
    </xacro:macro>


    <!-- * * * Link Definitions * * * -->
    <link name="world" />
    <link name="base_link">
        <visual>
            <xacro:default_origin />
            <xacro:box_geometry length="0.1" width="0.1" height="2" />
            <material name="m1">
                <color rgba="0 0.9 0.9 1.0"/>
            </material>
        </visual>
        <collision>
            <xacro:box_geometry length="0.1" width="0.1" height="2" />
            <xacro:default_origin />
        </collision>
        <inertial>
            <mass value="0.001"/>
            <inertia ixx="0" iyy="0" izz="0" ixy="0" ixz="0" iyz="0"/>
        </inertial>    
    </link>

    <link name="arm">
        <visual>
            <origin xyz="0 0.6 0" rpy="0 0 0" />
            <xacro:box_geometry length="0.1" width="2" height="0.1" />
            <material name="m2">
                <color rgba="0.3 0.8 0.1 1.0"/>
            </material>        
        </visual>
        <collision>
            <origin xyz="0 0.6 0" rpy="0 0 0" />
            <xacro:box_geometry length="0.1" width="2" height="0.1" />
        </collision>
        <inertial>
            <mass value="0.001"/>
            <inertia ixx="0" iyy="0" izz="0" ixy="0" ixz="0" iyz="0"/>
        </inertial>    
    </link>

    <link name="slider">
        <visual>
            <xacro:default_origin />
            <xacro:box_geometry length="0.15" width="0.15" height="0.15" />
            <material name="m3">
                <color rgba="0.8 0.2 0.1 1.0"/>
            </material>
        </visual>
        <collision>
            <xacro:default_origin />
            <xacro:box_geometry length="0.15" width="0.15" height="0.15" />
        </collision>
        <inertial>
            <mass value="0.001"/>
            <inertia ixx="0" iyy="0" izz="0" ixy="0" ixz="0" iyz="0"/>
        </inertial>    
    </link>

    <link name="gripper">
        <visual>
            <xacro:default_origin />
            <xacro:box_geometry length="0.05" width="0.05" height="0.05" />
            <material name="m4">
                <color rgba="0.8 0.2 0.9 1.0"/>
            </material>
        </visual>
        <collision>
            <xacro:default_origin />
            <xacro:box_geometry length="0.01" width="0.01" height="0.01" />
        </collision>
        <inertial>
            <mass value="0.00001"/>
            <inertia ixx="0" iyy="0" izz="0" ixy="0" ixz="0" iyz="0"/>
        </inertial>    
    </link>

    <!-- * * * Joint Definitions * * * -->
    <joint name="world_base_link" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
    </joint>

    <joint name="base_arm" type="revolute">
        <parent link="base_link" />
        <child link="arm" />
        <limit lower="-3.1416" upper="3.1416" effort="0.1" velocity="3" />
        <origin xyz="0 0 0.815" rpy="0 0 0" />
        <axis xyz="0 0 1" />
    </joint>


    <joint name="arm_slider" type="prismatic">
        <parent link="arm" />
        <child link="slider" />
        <limit lower="-0.4" upper="1.2" effort="10" velocity="3" />
        <origin xyz="0 0.4 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="slider_gripper" type="prismatic">
        <parent link="slider" />
        <child link="gripper" />
        <limit lower="-0.7" upper="1.15" effort="10" velocity="3" />
        <origin xyz="0 0 0" rpy="-3.1416 0 0" />
        <axis xyz="0 0 1" />
    </joint>



    <!-- * * * Sensor Definitions * * * -->
    <link name="imu">
        <visual>
            <xacro:box_geometry length="0.01" width="0.01" height="0.01" />
        </visual>
    </link>

    <link name="camera_1">
        <visual>
            <xacro:box_geometry length="0.01" width="0.01" height="0.01" />
        </visual>
    </link>

    <link name="camera_2">
        <visual>
            <xacro:box_geometry length="0.01" width="0.01" height="0.01" />
        </visual>
    </link>

    <joint name="gripper_imu" type="fixed">
        <parent link="gripper"/>
        <child link="imu"/>
        <origin xyz="0 0 0"/>
    </joint>

    <joint name="gripper_camera_1" type="fixed">
        <parent link="gripper"/>
        <child link="camera_1"/>
        <origin xyz="0 -0.025 0" rpy="0 0 -1.5708"/>
    </joint>

    <joint name="gripper_camera_2" type="fixed">
        <parent link="gripper"/>
        <child link="camera_2"/>
        <origin xyz="0 0.025 0" rpy="-3.1416 0 0"/>
    </joint>
    

</robot> 